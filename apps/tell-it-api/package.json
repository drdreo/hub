{
    "name": "@hub/tell-it-api",
    "version": "0.0.1",
    "private": true,
    "dependencies": {
        "@tell-it-api/data-access": "workspace:*",
        "@tell-it-api/game": "workspace:*",
        "@tell-it-api/socket": "workspace:*",
        "@tell-it-shared/domain": "workspace:*",
        "@tell-it-shared/utils": "workspace:*"
    },
    "nx": {
        "name": "tell-it-api",
        "projectType": "application",
        "sourceRoot": "apps/tell-it-api/src",
        "targets": {
            "build": {
                "executor": "nx:run-commands",
                "options": {
                    "command": "webpack-cli build",
                    "args": [
                        "node-env=production"
                    ]
                },
                "configurations": {
                    "development": {
                        "args": [
                            "node-env=development"
                        ]
                    }
                }
            },
            "serve": {
                "executor": "@nx/js:node",
                "defaultConfiguration": "development",
                "dependsOn": [
                    "build"
                ],
                "options": {
                    "buildTarget": "tell-it-api:build",
                    "runBuildTargetDependencies": false
                },
                "configurations": {
                    "development": {
                        "buildTarget": "tell-it-api:build:development"
                    },
                    "production": {
                        "buildTarget": "tell-it-api:build:production"
                    }
                }
            },
            "test": {
                "options": {
                    "passWithNoTests": true
                }
            }
        }
    }
}
