{
    "name": "owe-drahn",
    "version": "2.0.1",
    "private": true,
    "nx": {
        "name": "owe-drahn",
        "projectType": "application",
        "sourceRoot": "apps/owe-drahn/src",
        "targets": {
            "build": {
                "executor": "@nx/vite:build",
                "options": {
                    "outputPath": "apps/{projectName}/dist"
                },
                "configurations": {
                    "development": {
                        "mode": "development"
                    },
                    "production": {
                        "mode": "production"
                    }
                },
                "defaultConfiguration": "production"
            },
            "deploy": {
                "executor": "@hub/plugin:cloudflare",
                "options": {
                    "config": "apps/owe-drahn/wrangler.jsonc"
                },
                "configurations": {
                    "production": {}
                }
            },
            "deploy_old": {
                "executor": "nx:run-commands",
                "dependsOn": [
                    "build"
                ],
                "inheritEnvironment": true,
                "options": {
                    "parallel": false
                },
                "configurations": {
                    "production": {
                        "commands": [
                            "wrangler pages deploy apps/{projectName}/dist --project-name={projectName} --branch=$NX_BRANCH --commit-dirty=true"
                        ]
                    }
                },
                "defaultConfiguration": "production"
            }
        }
    }
}
